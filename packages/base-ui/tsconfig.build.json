{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ESNext",
    "module": "ESNext",
    "declarationDir": "./dist",
    "incremental": true,
    "tsBuildInfoFile": "./tsconfig.build.tsbuildinfo" // // for tsup rollup dts tsBuildInfoFile is required when using incremental
  },
  "exclude": [
    "dist",
    "**/__tests__/*",
    "**/__mocks__/*",
    ".storybook",
    "./src/_stories/**",
    "**/*.stories.*",
    "**/*.test.*"
  ]
}
