{
  "name": "@belgattitude/base-ui",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/belgattitude/perso",
  "repository": {
    "type": "git",
    "url": "https://github.com/belgattitude/perso",
    "directory": "packages/base-ui"
  },
  "author": {
    "name": "Vanvelthem SÃ©bastien",
    "url": "https://github.com/belgattitude"
  },
  "sideEffects": false,
  "type": "module",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "main": "./dist/index.cjs",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.3%",
      "not ie 11",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "scripts": {
    "build": "rimraf --no-glob ./dist && cross-env NODE_ENV=production microbundle --tsconfig ./tsconfig.build.json -f es,cjs --no-compress",
    "dev": "microbundle watch",
    "clean": "rimraf --no-glob ./.dist ./coverage ./tsconfig.tsbuildinfo",
    "check-dist": "es-check -v",
    "check-size": "size-limit --highlight-less",
    "test": "yarn test-unit",
    "test-unit": "vitest run",
    "test-unit-jest": "jest --config ./jest.config.js --runInBand",
    "test-unit-watch": "vitest watch --ui",
    "typecheck": "tsc --project ./tsconfig.json --noEmit",
    "format": "yarn run --top-level prettier --config ../../.prettierrc.js --ignore-path ../../.prettierignore \"./**/*.{js,jsx,cjs,mjs,ts,tsx,mts,md,mdx,json,css,scss,less}\"",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx,.mjs,.cjs,.mjs,.cjs,.mts,.cts --cache --cache-location ../../.cache/eslint/base-ui.eslintcache",
    "fix-all-files": "eslint . --ext .ts,.tsx,.js,.jsx,.mjs,.cjs,.mts,.cts --fix"
  },
  "peerDependencies": {
    "@emotion/react": "^11.9.3",
    "@emotion/styled": "^11.3.0"
  },
  "peerDependenciesMeta": {
    "@emotion/react": {
      "optional": false
    },
    "@emotion/styled": {
      "optional": false
    }
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@belgattitude/eslint-config-bases": "workspace:^",
    "@emotion/babel-plugin": "11.9.2",
    "@emotion/react": "11.9.3",
    "@emotion/styled": "11.9.3",
    "@size-limit/file": "7.0.8",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "13.3.0",
    "@testing-library/react-hooks": "8.0.1",
    "@testing-library/user-event": "14.2.1",
    "@types/jest": "28.1.2",
    "@types/node": "18.0.0",
    "@types/react": "18.0.14",
    "@types/react-dom": "18.0.5",
    "@vitejs/plugin-react": "1.3.2",
    "@vitest/ui": "0.15.2",
    "autoprefixer": "10.4.7",
    "c8": "7.11.3",
    "cross-env": "7.0.3",
    "es-check": "6.2.1",
    "eslint": "8.18.0",
    "get-tsconfig": "patch:get-tsconfig@npm%3A4.0.3#~/.yarn/patches/get-tsconfig-npm-4.0.3-3ca65a6ddd.patch",
    "happy-dom": "5.3.1",
    "jest": "28.1.1",
    "jest-css-modules-transform": "4.4.2",
    "jest-environment-jsdom": "28.1.1",
    "microbundle": "0.15.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.14",
    "postcss-flexbugs-fixes": "5.0.2",
    "postcss-preset-env": "7.7.1",
    "rimraf": "3.0.2",
    "size-limit": "7.0.8",
    "ts-jest": "28.0.5",
    "ts-node": "10.8.1",
    "typescript": "4.7.4",
    "vite": "2.9.12",
    "vite-plugin-svgr": "2.1.1",
    "vite-tsconfig-paths": "3.5.0",
    "vitest": "0.15.2"
  },
  "engines": {
    "node": ">=14.16"
  }
}
