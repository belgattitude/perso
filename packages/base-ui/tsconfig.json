{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "@belgattitude/base-ui",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "incremental": true,
    "paths": {
      "@belgattitude/common-i18n/*": ["../../../packages/common-i18n/src/*"],
      "@belgattitude/common-i18n": ["../../../packages/common-i18n/src/index"]
    }
  },
  "exclude": ["**/node_modules", "**/.*/", "./dist", "./coverage"],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**.*.cjs",
    "**/*.mjs",
    "**/*.json"
  ]
  // "types": ["vitest/globals"]
}
