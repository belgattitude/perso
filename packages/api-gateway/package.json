    "@types/jest": "29.2.4",
    "@types/node": "18.11.9",
    "cross-env": "7.0.3",
    "eslint": "8.29.0",
    "get-tsconfig": "4.2.0",
    "graphql": "16.6.0",
    "jest": "29.3.1",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.2",
    "ts-jest": "29.0.3",
    "typescript": "4.9.4"
  }
}
