{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "@belgattitude/db-main",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES2020",
    "lib": ["esnext"],
    "module": "esnext",
    "noEmit": false,
    "incremental": true,
    "paths": {
      "@belgattitude/crypto": ["../../../packages/crypto/src/index"]
    }
  },
  "exclude": ["**/node_modules", "**/.*/"],
  "include": ["**/*.ts", "**/*.js", "**/*.cjs", "**/*.mjs", "**/*.json"]
}
