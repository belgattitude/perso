{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "@belgattitude/common-i18n",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "noEmit": false,
    "incremental": true,
    "paths": {}
  },
  "exclude": ["**/node_modules", "**/.*/", "dist", "build"],
  "include": ["**/*.ts", "**/*.js", "**/*.cjs", "**/*.mjs", "**/*.json"]
}
